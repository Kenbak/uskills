<div class="container mt-5">
  <h1 class="text-center">Formation <%= @formation.name %></h1>

  <div class="card mt-4">
    <div class="card-body">
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><strong>Name:</strong> <%= @formation.name %></li>
        <li class="list-group-item"><strong>Description:</strong> <%= @formation.description %></li>
      </ul>

      <div class="d-flex justify-content-center mt-3">
        <%= link_to "Edit Formation", edit_formation_path(@formation), class: "btn btn-primary mx-2" %>
        <%= link_to "Come Back", formations_path, class: "btn btn-secondary mx-2" %>
      </div>
    </div>
  </div>
</div>
