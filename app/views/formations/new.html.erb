<%= simple_form_for @formation do |f| %>
  <div class="container mt-4">
    <h1 class="text-center">Nouvelle Formation</h1>

    <div class="card mt-4">
      <div class="card-body">
        <%= f.input :name, label: "Name", input_html: { class: "form-control" } %>

        <%= f.input :description, label: "Description", input_html: { class: "form-control" } %>


        <div class="text-center mt-3">
          <%= f.button :submit, "Create a Formation", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
