<div class="container mt-4">
  <div class="text-center">
    <h1>Skills</h1>
  </div>

  <% if current_user.role == 'teach' %>
    <p>Je suis un enseignant</p>
    <%end%>
     <% if current_user.role == 'learn' %>
    <p>Je suis un Ã©tudiant</p>

    <%end%>

  <div class="row">
    <% @skills.each do |skill| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title text-center"><%= skill.title %></h5>
            <p class="card-text">
              <strong>title:</strong> <%= skill.title %><br>
              <strong>description:</strong> <%= skill.description %><br>
            </p>
            <div class="text-center mt-3">
              <a href="<%= skill_path(skill) %>" class="btn btn-success">See more..</a>
            </div>
          </div>
          <div class="card-footer">

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
