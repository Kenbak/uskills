
<div class="container mt-5">
  <h1 class="text-center">skill <%= @skill.title %></h1>

  <div class="card mt-4">
    <div class="card-body">
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><strong>Title:</strong> <%= @skill.title %></li>
        <li class="list-group-item"><strong>Description:</strong> <%= @skill.description %></li>
      </ul>

      <div class="d-flex justify-content-center mt-3">
        <%= link_to "Edit skill", edit_skill_path(@skill), class: "btn btn-primary mx-2" %>
        <%= link_to "Come Back", skills_path, class: "btn btn-secondary mx-2" %>
      </div>
    </div>
  </div>
</div>

