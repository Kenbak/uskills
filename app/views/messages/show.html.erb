<!-- app/views/messages/show.html.erb -->
<div class="card mt-4">
  <div class="card-body">
    <h1 class="card-title mb-4">Message Details</h1>

    <dl class="row">
      <dt class="col-sm-3">From:</dt>
      <dd class="col-sm-9"><%= @message.student.name %></dd>

      <dt class="col-sm-3">To:</dt>
      <dd class="col-sm-9"><%= @message.teacher.name %></dd>

      <dt class="col-sm-3">Content:</dt>
      <dd class="col-sm-9"><%= @message.content %></dd>

      <dt class="col-sm-3">Sent at:</dt>
      <dd class="col-sm-9"><%= @message.created_at %></dd>
    </dl>

    <%= link_to 'Back', user_messages_path(current_user), class: 'btn btn-secondary mr-2' %>

 
  </div>
</div>
