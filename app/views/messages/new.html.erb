<!-- app/views/messages/new.html.erb -->
<div class="container mt-4">
  <center>
    <h1 class="mb-4">New message ðŸ“¤</h1>
  </center>
  <div class="iphone-message-container">
    <div class="iphone-message">
      <%= simple_form_for [@user, @message] do |f| %>
        <div class="mb-3">
          <%= f.label :to_id, 'To', class: 'form-label' %>
          <%= f.collection_select :to_id, User.all, :id, :name, { prompt: 'Select User' }, class: 'form-select' %>
        </div>

        <div class="mb-3">
          <%= f.label :content, 'Message Content', class: 'form-label' %>
          <%= f.text_area :content, rows: 4, class: 'form-control', placeholder: 'Enter your message...' %>
        </div>

        <div class="d-grid">
          <center>
            <%= f.button :submit, class: 'btn btn-primary btn-block' %>
          </center>
        </div>
      <% end %>
    </div>
  </div>
</div>
<br>
