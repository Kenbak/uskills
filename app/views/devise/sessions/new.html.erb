<div class="bg">
  <div class="container-sign-in container my-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <h2 class="text-center mb-4">Log in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-signin'
          }) do |f| %>



          <div class="form-group mb-3">
            <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" ,
              class: "form-control" }, wrapper_html: { class: "mb-3" }, label_html: { class: 'form-label' } %>
          </div>

          <div class="form-group mb-3">
            <%= f.input :password, required: false, input_html: { autocomplete: "current-password" ,
              class: "form-control" }, wrapper_html: { class: "mb-3" }, label_html: { class: 'form-label' } %>
          </div>

          <div class="form-group mb-3 form-check">
            <%= f.input :remember_me, as: :boolean, label_html: { class: 'form-check-label' }, wrapper_html: {
              class: "form-check" } %>
          </div>

          <div class="text-center">
            <%= f.button :submit, "Log in" , class: "btn btn-primary btn-block" %>
          </div>
          <% end %>

            <div class="form-links text-center mt-4">
              <%= render "devise/shared/links" %>
            </div>
      </div>
    </div>
  </div>
</div>
